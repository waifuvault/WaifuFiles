{
  "name": "waifuvault-uploader",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "overrides": {
    "eslint-plugin-vitest": {
      "@typescript-eslint/utils": "^8.39.1"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -H localhost",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier ./app --check",
    "prettier:fix": "prettier ./app --write",
    "update_deps": "npx npm-check-updates",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "bootstrap-icons": "^1.13.1",
    "globals": "^16.4.0",
    "next": "^15.5.4",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "waifuvault-node-api": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@trumpet/eslint-config-next": "^1.9.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "lint-staged": {
    "app/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "app/**/*.{css,scss,less,json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
