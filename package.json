{
  "name": "waifuvault-uploader",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "overrides": {
    "eslint-plugin-vitest": {
      "@typescript-eslint/utils": "^8.39.1"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -H localhost",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier ./app --check",
    "prettier:fix": "prettier ./app --write",
    "prepare": "husky",
    "type-check": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "globals": "^16.3.0",
    "next": "^15.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "waifuvault-node-api": "^1.8.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@next/eslint-plugin-next": "^15.4.6",
    "@trumpet/eslint-config-next": "^1.9.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "lint-staged": {
    "app/**/*.{ts,tsx}": [
      "npm run type-check"
    ],
    "app/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "app/**/*.{css,scss,less,json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
